<% content_for :title, t(".title") %>

<div class="flex flex-col md:w-5/6 lg:w-2/3 w-full h-full p-2 gap-4">
  <nav class="flex w-full justify-between items-center min-h-12">
    <div class="flex justify-end gap-4 items-center">
      <%= link_to notes_path,
        class: "flex items-center justify-center h-full min-w-12 p-2 border border-zinc-400 dark:border-zinc-600 shadow rounded-lg hover:bg-zinc-200 dark:hover:bg-zinc-800" do %>
         <%= image_tag "arrow-left.svg", class: "w-6 dark:invert" %>
          <div class="sr-only"><%= t("shared.back_button") %></div>
      <% end %>
    </div>

    <div class="flex-1 flex items-center justify-center">
      <div class="text-lg">
        <%= t(".title") %>
      </div>
    </div>

    <div class="p-2 min-w-8"></div>
  </nav>

  <div class="flex flex-col items-center">
    <div class="flex flex-col items-center w-full min-h-1/2 p-4">
      <%= button_to session_path,
        method: :delete,
        data: { turbo_confirm: t(".confirm_signout") },
        form_class: " flex justify-center p-2 rounded-lg shadow border border-zinc-400 dark:border-zinc-600 hover:bg-zinc-200 dark:hover:bg-zinc-800 min-w-1/2" do %>
         <div class="font-2xl underline"><%= t(".signout_button") %></div>
      <% end %>
    </div>
  </div>
</div>
