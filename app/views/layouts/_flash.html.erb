<% if notice = flash[:notice] %>
  <div class="w-full flex items-center justify-center gap-2 font-medium bg-green-50 dark:bg-green-950 border border-green-400 rounded-lg p-4">
    <%= notice %>
  </div>
<% end %>

<% if alert = flash[:alert] %>
  <div class="w-full flex items-center justify-center gap-2 font-medium bg-red-50 dark:bg-red-950 border border-red-400 rounded-lg p-4">
    <%= alert %>
  </div>
<% end %>
