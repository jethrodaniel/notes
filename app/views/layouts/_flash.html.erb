<% flash.each do |type, message| %>
  <div
    data-controller="auto-remove"
    data-auto-remove-delay-value="5000"
    class="
      <%= flash_color(type) %>
      flex items-center justify-center
      transition-all duration-300 ease-in-out
      font-medium rounded-lg p-4"
  >
    <%= message %>
  </div>
<% end %>
