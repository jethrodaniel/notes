<article class="relative w-full h-full flex flex-col gap-2 justify-center rounded-lg border border-gray-400 dark:border-gray-600 shadow hover:bg-gray-200 dark:hover:bg-gray-800">

  <% if note.title.present? %>
    <%= link_to edit_note_path(note),
      id: dom_id(note),
      class: "text-lg p-4 rounded-t-lg" do %>
      <span class="absolute inset-0 z-10"></span>
      <%= note.title %>
    <% end %>

    <p class=" p-4 w-full h-full whitespace-pre-line"><%= note.content %></p>
  <% else %>
    <%= link_to edit_note_path(note),
      id: dom_id(note),
      class: "flex-1 p-4 rounded-lg" do %>
      <p class=" w-full h-full whitespace-pre-line"><%= note.content %></p>
    <% end %>
  <% end %>
</article>
