<% content_for :title, "Notes" %>

<div class="flex flex-col items-center md:w-2/3 w-full h-full p-2 gap-4">
  <nav class="flex justify-center w-full">
    <%= form_with url: "/search", method: :get, class: "w-full border rounded-full" do |form| %>
       <div class="flex items-center">
         <%= image_tag "magnifying-glass.svg", class: "w-6 ml-4" %>
         <%=
           form.search_field :search,
             class: "w-full h-full rounded-r-full p-2",
             placeholder: "Search your notes"
         %>
       </div>
    <% end %>
  </nav>

  <div class="flex-1 flex flex-col w-full gap-2">
    <% @notes.each do |note| %>
      <%= render note %>
    <% end %>
  </div>

  <div class="bottom-0 sticky w-full flex justify-center">
    <%= link_to "Add a note", new_note_path,
      class: "bg-white p-2 m-2 border rounded-full flex items-center justify-center w-full" %>
  </div>
</div>
