<% content_for :title, "Notes" %>

<div class="flex-1 flex flex-col w-full items-center">
  <div
    data-controller="notes-search"
    class="flex-1 flex flex-col items-center md:w-5/6 w-full h-full p-2 gap-4"
  >
    <nav class="flex justify-center md:justify-start w-full">
      <%= form_with url: notes_path,
        method: :get,
        data: { controller: "auto-submit" },
        class: "w-full md:w-1/2 flex flex-col" do |form| %>
        <div class="flex items-center border border-slate-400 shadow rounded-lg">
          <%= form.label :q, t(".query"), class: "sr-only" %>
          <%=
            form.search_field :q,
              class: "w-full h-full rounded-l-lg p-2 hover:bg-slate-100",
              placeholder: t(".query_placeholder"),
              value: params[:q],
              data: {
                action: "input->auto-submit#submit",
                turbo_permanent: true,
                notes_search_target: "input"
              }
          %>
          <%= button_tag type: :submit, name: nil, class: "min-w-12 flex h-full items-center justify-center rounded-r-lg hover:bg-slate-100" do %>
            <%= image_tag "magnifying-glass.svg", class: "w-6" %>
            <div class="sr-only"><%= t(".search") %></div>
          <% end %>
        </div>
      <% end %>

      <div class="hidden md:flex flex-1 justify-end">
        <%= link_to t(".add_a_note"), new_note_path,
          class: "bg-white py-2 px-4 border border-slate-400 shadow rounded-lg hover:bg-slate-100 focus:bg-slate-100" %>
      </div>
    </nav>

    <% if (query = params[:q]).present? %>
      <div class="w-full flex justify-center md:justify-start gap-2">
        <div class="">
          <%= t(".search_results_html", query: query, count: @notes.count) %>
        </div>

        <%= link_to notes_path,
          data: { action: "notes-search#click:stop" },
          class: "underline hover:bg-slate-100" do %>
          <%= t(".clear") %>
        <% end %>
      </div>
    <% end %>

    <div class="flex-1 grid auto-rows-min grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 w-full gap-2">
      <% @notes.each do |note| %>
        <%= render note %>
      <% end %>
    </div>
  </div>

  <%= link_to new_note_path,
    class: "flex items-center justify-center md:hidden sticky bottom-4 ml-[calc(100vw-6rem)] p-2 border border-slate-400 bg-slate-100 shadow rounded-lg size-16 z-10" do %>
    <%= image_tag "plus.svg", class: "w-6" %>
    <div class="sr-only"><%= t(".add_a_note") %></div>
  <% end %>
</div>
