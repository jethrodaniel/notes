<% content_for :title, "Notes" %>

<div class="flex flex-col items-center md:w-5/6 w-full h-full p-2 gap-4">
  <nav class="flex justify-center md:justify-start w-full">
    <%= form_with url: "/search",
      method: :get,
      class: "w-full md:w-1/2 flex flex-col justify-center" do |form| %>
       <div class="flex items-center border rounded-full">
         <%= image_tag "magnifying-glass.svg", class: "w-6 ml-4" %>
         <%=
           form.search_field :search,
             class: "w-full h-full rounded-r-full p-2",
             placeholder: "Search your notes"
         %>
       </div>
    <% end %>

    <div class="hidden md:flex flex-1 justify-end">
      <%= link_to "Add a note", new_note_path,
        class: "bg-white p-2 m-2 border rounded-full" %>
    </div>
  </nav>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 w-full gap-2">
    <% @notes.each do |note| %>
      <%= render note %>
    <% end %>
  </div>

  <div class="flex md:hidden bottom-0 sticky w-full justify-center">
    <%= link_to "Add a note", new_note_path,
      class: "bg-white p-2 m-2 border rounded-full flex items-center justify-center w-1/2" %>
  </div>
</div>
