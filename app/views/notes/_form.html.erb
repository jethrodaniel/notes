<%= form_with model: note,
  data: { controller: "auto-submit" },
  class: "flex flex-col h-full" do |form| %>
  <div class="flex flex-col rounded-lg border border-slate-400 shadow w-full min-h-1/2">
    <% if note.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>
        <ul>
          <% note.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.text_field :title,
      data: { action: "input->auto-submit#submit" },
      placeholder: "Title",
      class: "pt-4 pl-4 pb-2 rounded-t-lg text-xl" %>

    <%= form.label :content, class: "sr-only" %>
    <%= form.textarea :content,
      placeholder: "Content",
      data: {
        controller: "textarea", textarea_target: "textarea",
        action: "auto-submit#submit"
      },
      class: "p-4 w-full h-full rounded-b-lg" %>
  </div>

  <div class="hide-if-js-enabled">
    <div class="w-full flex justify-center pt-4">
      <%= button_tag type: :submit, class: "bg-white p-2 m-2 border border-slate-400 shadow rounded-full flex items-center justify-center w-1/2 hover:bg-slate-100 focus:bg-slate-100" do %>
        <%= t("notes.edit.submit") %>
      <% end %>
    </div>
  </div>
<% end %>
