<%= form_with model: note do |form| %>
  <div class="flex flex-col rounded-lg border border-slate-400 shadow w-full">
    <% if note.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

        <ul>
          <% note.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.label :content, class: "sr-only" %>
    <%= form.textarea :content,
      data: { controller: "textarea", textarea_target: "textarea" },
      class: "p-4 w-full h-auto rounded-lg" %>
  </div>

  <div class="w-full flex justify-center pt-4">
    <%= form.submit class: "bg-white p-2 m-2 border border-slate-400 shadow rounded-full flex items-center justify-center w-1/2" %>
  </div>
<% end %>
