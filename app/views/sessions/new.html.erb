<% content_for :title, t(".sign_in") %>

<%= form_with url: session_path,
  class: "flex flex-col w-full md:max-w-96 h-full items-center p-8 gap-4" do |form| %>
  <h1 class="text-2xl font-bold py-6">
    <%= t("shared.application_title") %>
  </h1>

  <%= render 'layouts/flash' %>

  <%= form.label :email_address, t(".email_address_label"), class: "w-full" %>
  <%= form.email_field :email_address,
    required: true,
    autofocus: true,
    autocomplete: "username",
    placeholder: t(".email_address_placeholder"),
    value: params[:email_address],
    class: "w-full border border-zinc-400 dark:border-zinc-600 shadow rounded-lg p-2"
  %>
  <%= form.label :password, t(".password_label"), class: "w-full" %>
  <%= form.password_field :password,
    required: true,
    autocomplete: "current-password",
    placeholder: t(".password_placeholder"),
    class: "w-full border border-zinc-400 dark:border-zinc-600 shadow rounded-lg p-2"
  %>

  <%= form.submit t(".sign_in"),
    class: "w-full border border-zinc-400 dark:border-zinc-600 hover:bg-zinc-200 dark:hover:bg-zinc-800 shadow rounded-full mt-6 p-1"
  %>

  <%= link_to t(".forgot_your_password"), new_password_path, class: "underline" %>
<% end %>
